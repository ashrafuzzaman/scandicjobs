<% content_for :head do %>
  <style type="text/css">
    form label { width: 120px; float: left; }
  </style>
<% end %>

<% form_for @employer do |f| -%>
  <%= f.error_messages %>

  <div class='field'>
    Kontaktperson
  </div>

  <div class='field'>
    <%= f.label :first_name, "Förnamn" -%>
    <%= f.text_field :first_name -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :last_name, "Efternamn" -%>
    <%= f.text_field :last_name -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :phone, "Telefon" -%>
    <%= f.text_field :phone -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :email, "e-post" -%>
    <%= f.text_field :email -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :address, "Företag adress" -%>
    <%= f.text_area :address, :size => "42x4" -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :work_address, "Arbetsplats" -%>
    <%= f.text_area :work_address, :size => "42x4" -%>
  </div>
  <br/>

  <div class='field'>
    <%= render :partial => "/job_categories/select", :locals => {:f => f} %>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :working_period, "Fritid" -%>
    <%= f.select(:working_period, ["Heltid", "Deltid", "Enstak uppdrag", "Sommarjobb"], :prompt => 'Select') %>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :about_job, "Arbetsbeskrivning" -%>
    <%= f.text_area :about_job, :size => "42x4" -%>
  </div>
  <br/>

  <%= render :partial => "/shared/admin/form_actions", :locals => {:f => f, :continue_editing => false} %>
<% end -%>
