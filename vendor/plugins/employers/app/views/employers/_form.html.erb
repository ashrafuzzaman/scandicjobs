<% content_for :head do %>
  <style type="text/css">
    form label { width: 120px; float: left; }
  </style>
<% end %>

<% form_for @employer do |f| -%>
  <%= f.error_messages %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger' -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :address, "Company address" -%>
    <%= f.text_area :address, :size => "42x4" -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :work_address -%>
    <%= f.text_area :work_address, :size => "42x4" -%>
  </div>
  <br/>

  <div class='field'>
    <%= render :partial => "/job_categories/select", :locals => {:f => f} %>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :working_period -%>
    <%= f.select(:working_period, ["Full time", "Part time"], :prompt => 'Select') %>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :about_job -%>
    <%= f.text_area :about_job, :size => "42x4" -%>
  </div>
  <br/>

  <%= render :partial => "/shared/admin/form_actions", :locals => {:f => f, :continue_editing => false} %>
<% end -%>
