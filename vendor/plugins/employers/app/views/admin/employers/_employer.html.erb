<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(employer) -%>">
  <span class='title'>
    <%=h employer.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), employer_url(employer),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_employer_path(employer),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_employer_path(employer),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
