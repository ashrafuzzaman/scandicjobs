<% content_for :head do %>
  <style type="text/css">
    form label { width: 100px; float: left; }
  </style>
<% end %>

<% form_for @applicant do |f| -%>
  <%= f.error_messages %>

  <div class='field'>
    <%= f.label :first_name, "Förnamn" -%>
    <%= f.text_field :first_name -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :last_name, "Efternamn" -%>
    <%= f.text_field :last_name -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :gender, "Kön" -%>
    <%= f.select(:gender, ["Male", "Female"], :prompt => 'Select') %>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :age, "Födelsedatum (åååå-mm-dd)" -%>
    <%= f.text_field :age -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :address, "Adress" -%>
    <%= f.text_area :address, :size => "42x4" -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :city, "Stad" -%>
    <%= f.text_field :city -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :country, "Land" -%>
    <%= f.text_field :country -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :phone, "Telefon" -%>
    <%= f.text_field :phone -%>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :email, "e-post" -%>
    <%= f.text_field :email -%>
  </div>
  <br/>

  <div class='field'>
    <%= render :partial => "/job_categories/select", :locals => {:f => f} %>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :free_time, "Fritid" -%>
    <%= f.select(:free_time, ["Heltid", "Deltid", "Enstak uppdrag", "Sommarjobb"], :prompt => 'Select') %>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :language, "Språk" -%>
    <%= f.select(:language, ["Engelska", "Svenska"], :prompt => 'Select') %>
  </div>
  <br/>

  <div class='field'>
    <%= f.label :about_me, "Om dig" -%>
    <%= f.text_area :about_me, :size => "42x4" -%>
  </div>
  <br/>

  <%= render :partial => "/shared/admin/form_actions", :locals => {:f => f, :continue_editing => false} %>
<% end -%>
