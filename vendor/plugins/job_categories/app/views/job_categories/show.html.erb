<% content_for :body_content_title do %>
  <%= @job_category.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @job_category.title %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%= @job_category.description %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="job_categories">
    <% @job_categories.each do |job_category| %>
      <li>
        <%= link_to job_category.title, job_category_url(job_category) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
